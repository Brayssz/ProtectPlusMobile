<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outline layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent background for outline -->
            <stroke android:width="2dp" android:color="@color/black" /> <!-- Outline color -->
            <corners android:radius="19dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Inner background layer -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Background color of the card -->
            <corners android:radius="17dp" /> <!-- Slightly smaller radius for inner background -->
        </shape>
    </item>

</layer-list>
